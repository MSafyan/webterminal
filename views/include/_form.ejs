<!-- form handling -->
 <form action="/api" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="course_code" class="text-light">Course Code</label>
            <input type="text" name="course_code" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="Phone_number" class="text-light">Phone Number</label>
            <input type="text" name="phone_number" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="street_address" class="text-light">Street Address</label>
            <input type="text" name="street_address" value="" placeholder="Ak road house 10">
        </div>
        <div class="form-group">
            <label for="Country" class="text-light">Country</label>
            <input type="text" name="country" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="City" class="text-light">City</label>
            <input type="text" name="city" value="" placeholder="lahore">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" >
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div>


        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>